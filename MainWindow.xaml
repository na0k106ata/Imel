<Window x:Class="Imel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Imel" 
        Height="30" Width="30"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True" 
        ShowInTaskbar="False"
        Focusable="False"
        IsHitTestVisible="False">

    <!-- 
      重要プロパティ:
      - WindowStyle="None", AllowsTransparency="True": 枠なし透明ウィンドウ
      - Topmost="True": 常に最前面
      - IsHitTestVisible="False": クリックを透過（操作を阻害しない）
      - ShowInTaskbar="False": タスクバー非表示
    -->

    <Border x:Name="MainBorder" CornerRadius="5" Background="#AA000000" Padding="2">
        <TextBlock Name="ImeStatusText" 
                   Text="A" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="16"/>
    </Border>
</Window>