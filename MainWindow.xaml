<Window x:Class="Imel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Imel" 
        Height="24" Width="24"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True" 
        ShowInTaskbar="False"
        Focusable="False"
        IsHitTestVisible="False">

    <!-- 
      変更点:
      - Height/Width: 30 -> 24 (縮小)
      - FontSize: 16 -> 13 (縮小)
    -->

    <Border x:Name="MainBorder" CornerRadius="4" Background="#AA000000" Padding="2">
        <TextBlock Name="ImeStatusText" 
                   Text="A" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="13"/>
    </Border>
</Window>